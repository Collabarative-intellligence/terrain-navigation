<launch>
    <arg name="visualization" default="true"/>
    <node pkg="tf" type="static_transform_publisher" name="world_map" args="0 0 0 0 0 0 world map 10"/>
    <node pkg="adaptive_viewutility" type="test_viewutility_node" name="adaptive_viewutility" output="screen">
        <param name="geotiff_path" value="$(find adaptive_viewutility)/../resources/cadastre.tif"/>
        <param name="dataset_dir" value="/home/jaeyoung/Downloads/example_cadastre/images"/>
        <param name="replay" value="true"/>
    </node>
    <group if="$(arg visualization)">
        <node type="rviz" name="rviz" pkg="rviz" args="-d $(find adaptive_viewutility)/launch/config.rviz" />
    </group>
</launch>
